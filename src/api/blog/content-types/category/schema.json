{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Organize your content into categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "regex": "[a-z0-9][a-z0-9-]*[a-z0-9]",
      "targetField": "name",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "ousdPosts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.ousd-post",
      "mappedBy": "category"
    },
    "storyPosts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.story-post",
      "mappedBy": "category"
    },
    "websitePosts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.website-post",
      "mappedBy": "category"
    },
    "description": {
      "type": "text"
    }
  }
}
